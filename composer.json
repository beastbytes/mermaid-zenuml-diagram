{
    "name": "beastbytes/mermaid-zenuml-diagram",
    "type": "library",
    "description": "PHP for Mermaid.js zenuml diagrams",
    "keywords": [
        "mermaid",
        "zenuml"
    ],
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Chris Yates",
        "email": "chris.l.yates@gmail.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "beastbytes/mermaid": "dev-master"
    },
    "require-dev": {
        "consolidation/robo": "^4.0",
        "pestphp/pest": "^v2.0",
        "roave/infection-static-analysis-plugin": "^1.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "BeastBytes\\Mermaid\\ZenumlDiagram\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeastBytes\\Mermaid\\ZenumlDiagram\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/pest --init",
        "infection": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "robo": "robo",
        "test": "pest"
    }
}
